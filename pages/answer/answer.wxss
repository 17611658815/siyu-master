/* pages/answer/answer.wxss */
.page-body {
  display: flex;
  flex: 1;
  margin-bottom: 98rpx;
  flex-direction: column;
  background: #f8f8f8;
  border-top: 1rpx solid #e2e2e2;
}
.answer{
  width: 100%;
  background: #ffffff;
}
.answer>view:nth-child(1){
  width: 92%;
  margin: auto;
}
.answer>view:nth-child(1)>view:nth-child(1){
  display: block;
  font-size: 34rpx;
  color: #000000;
  margin-top: 50rpx;
}
.answer>view:nth-child(1)>view:nth-child(2){
  font-size: 25rpx;
  margin-top: 20rpx;
}
.answer>view:nth-child(1)>view:nth-child(2)>text:nth-child(2){
  padding: 0 10rpx;
}
.answer>view:nth-child(1)>view:nth-child(2)>text:nth-child(4){
  padding-left: 30rpx;
}
.answer>view:nth-child(1)>view:nth-child(2)>text:nth-child(5){
  padding: 0 10rpx;
}
.answer>view:nth-child(1)>view:nth-child(2)>text:nth-child(7){
  padding-left: 40rpx;
  color: #999999;
}

.answer>view:nth-child(2){
  width:92%;
  margin: auto;
}
.answer>view:nth-child(2)>view:nth-child(1){
  font-size: 32rpx;
  margin-top: 40rpx;
  color: #000000;
}
.answer>view:nth-child(2)>view:nth-child(2){
  font-size: 28rpx;
  margin-top: 18rpx;
  color: #666666;
  padding-bottom: 40rpx;
  line-height: 1.5;
  border-bottom: 1rpx solid #e2e2e2;
}
.answer>view:nth-child(2)>view:nth-child(3){
  font-size: 34rpx;
  margin-top: 50rpx;
  color: #000000;
}
.reply{
  width: 100%;
  margin: auto;
  font-size: 28rpx;
  color: #666666;
  text-indent:2em;
  line-height: 1.8;
  letter-spacing:1rpx;
  padding-bottom: 50rpx; 
}
/* 专家信息 */
.InfoBox{
  width: 100%;
  margin:auto;
  display: flex;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  align-items: center;
}
.InfoBox>view:nth-child(1){
  width: 90rpx;
  height: 90rpx;
}
.InfoBox>view:nth-child(1) image{
  border-radius: 50%;
  width: 100%;
  height: 100%;
}
.InfoBox>view:nth-child(2){
  flex: 1;
  margin-left: 38rpx;
}
.InfoBox>view:nth-child(2)>view:nth-child(1)>text:nth-child(1){
  font-size: 32rpx;
  color: #000000;
  padding-right: 10rpx;
}
.InfoBox>view:nth-child(2)>view:nth-child(1)>text:nth-child(2){
  font-size: 28rpx;
  color: #666666;
}
.InfoBox>view:nth-child(2)>view:nth-child(2)>text:nth-child(1){
  font-size: 28rpx;
  color: #999999;
  padding-right: 20rpx;
}
.InfoBox>view:nth-child(2)>view:nth-child(2)>text:nth-child(2){
  font-size: 28rpx;
  color: #999999;
}


