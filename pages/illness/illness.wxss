/* 搜索框 */

.searchBox{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  left: 0;
  top: 0;
  background: #ffffff;
  z-index: 99;
  border-top: 1rpx solid #e2e2e2;
}
.search{
  width: 690rpx;
  margin-top: 26rpx auto;
  height: 60rpx;
  border-radius: 30rpx;
  background: #f8f8f8;
}
.searchInput{
  width: 550rpx;
  height: 60rpx;
  color: #333333;
  padding: 0;
  font-size: 30rpx;
  line-height: 60rpx;
  margin-left: 50rpx;
  border: none;
  background: #f8f8f8;
}
.phcolor{
  color: #999999;
}
.lineShu{
  height: 30rpx;
  width: 2rpx;
  background: #999999;
  margin-top: 18rpx;
}
.searchIcon{
  width: 32rpx;
  height: 33rpx;
  margin-top: 16rpx;
  margin-right: 28rpx;
}
.title{
  width: 100%;
  margin-top: 82rpx;
}
.title view{
  width: 90%;
  margin: auto;
  padding-top: 25rpx;
  padding-bottom: 30rpx;
  font-size: 30rpx;
  color: #53a2ef;
  font-weight: 500;
  /* background: yellow; */
}
.illness{
background: #f8f8f8;

}
.illness view{
  width: 90%;
  margin: auto;
  height: 60rpx;
  line-height: 60rpx;
  color: #666666;
  font-size: 26rpx;
}
.illness_container view{
  width: 90%;
  margin: auto;
  display: flex;
  flex-wrap: wrap;
  padding-top: 10rpx;
  padding-bottom: 30rpx;
}
.illness_container view>label{
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #666666;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border: 1rpx solid #e2e2e2;
  margin-right: 20rpx;
  margin-top: 20rpx;
  border-radius: 44px;
}