/* pages/mayquestions/mayquestions.wxss */
.page-body {
  display: flex;
  flex: 1;
  flex-direction: column;
  background: #f8f8f8;
}
.list{
  width: 100%;
  height:120rpx;
  margin: auto;
  display: flex;
  justify-content:center;
  align-items: center;
  font-size: 28rpx;
  background: #ffffff;
  border-bottom: 10rpx solid #f8f8f8;
}
.list>view{
  width: 90%;
  height:120rpx;
  margin: auto;
  display: flex;
  justify-content:center;
  align-items: center;
  font-size: 28rpx;
  background: #ffffff;
}
.list text{
  padding-bottom: 15rpx;
}
/* tab切换样式 */
.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
}
.on{
  color: #53a2ef;
  border-bottom: 6rpx solid #53a2ef;
}


.msgList{
  width: 100%;
  background: #ffffff;
}
.msgList_box{
  width: 90%;
  margin: auto;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #e2e2e2;
}
.msgList_title{
  display: flex;
  align-items: center;
}
.msgList_title .video{
  width: 50rpx;
  height: 35rpx;
  border: 1rpx solid #4cd093;
  font-size: 22rpx;
  text-align: center;
  line-height: 35rpx;
  color:#4cd093;
  padding: 0 8rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.msgList_title .question{
  width: 50rpx;
  height: 35rpx;
  border: 1rpx solid #ff952d;
  font-size: 22rpx;
  text-align: center;
  line-height: 35rpx;
  color:#ff952d;
  padding: 0 8rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.msgList_title .audio{
  width: 50rpx;
  height: 35rpx;
  border: 1rpx solid #4c9dee;
  font-size: 22rpx;
  text-align: center;
  line-height: 35rpx;
  color:#4c9dee;
  padding: 0 8rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.msgList_title .problem{
 font-size: 32rpx;
 font-weight: 500;
}
.msgList_msg{
  display: flex;
  margin-top: 30rpx;
  align-items: center;
}
/* 问答样式 */
.msgList_answer{
  width: 100%;
  display: flex;
  margin-top: 30rpx;
}
.msgList_answer .articles{
  flex: 1;
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #666666;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 2; /** 显示的行数 **/
  overflow: hidden;  /** 隐藏超出的内容 **/
}
.msgList_answer .article{
  flex: 1;
  font-size: 28rpx;
  color: #666666;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 2; /** 显示的行数 **/
  overflow: hidden;  /** 隐藏超出的内容 **/
}
.msgList_answer image{
  width: 30rpx;
  height: 35rpx;
}
.msgList_title image{
  width: 30rpx;
  height: 35rpx;
  margin-right: 20rpx;
}
